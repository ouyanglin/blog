<div class="content">
  <h2 class="post_title"><%= link_to post.title, post_path(post) %></h2>
  <span class="post_date">
    <%= post.created_at.localtime.strftime("%A %B %e, %Y at %I:%M %p %Z") %>
  </span>
  <%= raw(post.body) %>
  <div class="post_footer">
    <ul class="tag">
      <% for l in post.labels %>
        <li><%= link_to l.label_name, label_path(l) %></li>
      <% end %>
    </ul>
    <div class="comments">
      <%= link_to "Comments", post_path(post, :anchor => "disqus_thread" %>
    </div>
  </div>
</div>
